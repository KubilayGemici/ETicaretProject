@model UpdateUserViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-body">
    <div class="row justify-content-between align-items-center mb-10">
        <div class="col-12 col-lg-auto mb-20">
            <div class="page-heading">
                <h3>Rüya Ev <span>/ Update</span></h3>
            </div>
        </div>
    </div>
    <div class="add-edit-product-wrap col-12">
        <div class="add-edit-product-form">
            <form asp-controller="User" asp-action="Update" method="post">
                <input type="hidden" asp-for="Id" />
                <h4 class="title">Kullanıcı Hakkında</h4>
                <div class="row">
                    <div class="col-lg-12 col-12 mb-30">
                        <input asp-for="FirstName" class="form-control" type="text" placeholder="Adı *">
                    </div>
                    <br />
                    <div class="col-lg-12 col-12 mb-30">
                        <input asp-for="LastName" class="form-control" type="text" placeholder="Soyadı *">
                    </div>
                    <br />
                    <div class="col-lg-12 col-12 mb-30">
                        <input asp-for="Email" class="form-control" type="text" placeholder="Email *">
                    </div>
                    <br />
                    <div class="col-lg-12 col-12 mb-30">
                        <input asp-for="Password" class="form-control" type="text" placeholder="Şifre *">
                    </div>
                    <br />
                    <div class="col-lg-12 col-12 mb-30">
                        <input asp-for="Title" class="form-control" type="text" placeholder="Ünvanı *">
                    </div>
                    <br />
                    <div class="col-lg-12 col-12 mb-30">
                        <input asp-for="Adress" class="form-control" type="text" placeholder="Adres *">
                    </div>
                    <br />
                    <div class="col-lg-12 col-12 mb-30">
                        <input asp-for="Number" class="form-control" type="text" placeholder="Telefon Numarası *">
                    </div>
                </div>
                <div class="row">
                    <div class="d-flex flex-wrap justify-content-end col mbn-10">
                        <button class="button button-outline button-primary mb-10 ml-10 mr-0">Update</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
</div>