@model CreateCategoryViewModel

@{
    ViewData["Title"] = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-body">
    <div class="row justify-content-between align-items-center mb-10">
        <div class="col-12 col-lg-auto mb-20">
            <div class="page-heading">
                <h3>Rüya Ev <span>/ Add</span></h3>
            </div>
        </div>
    </div>
    <div class="add-edit-product-wrap col-12">
        <div class="add-edit-product-form">
            <form asp-controller="Category" asp-action="Insert" method="post">
                <h4 class="title">Kategori Ekle</h4>
                <div class="row">
                    <div class="col-lg-12 col-12 mb-30">
                        <input asp-for="CategoryName" class="form-control" type="text" placeholder="Kategori Adı *">
                    </div>
                    <br />
                    <div class="col-lg-12 col-12 mb-30">
                        <input asp-for="Description" class="form-control" type="text" placeholder="Açıklaması *">
                    </div>
                </div>
                <div class="row">
                    <div class="d-flex flex-wrap justify-content-end col mbn-10">
                        <button class="button button-outline button-primary mb-10 ml-10 mr-0">Save</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
</div>

