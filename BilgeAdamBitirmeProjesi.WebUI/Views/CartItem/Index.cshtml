@model List<CartItemResponse>
@{
    ViewData["Title"] = "Index";
}
<section id="cart_items">
    <div class="container">
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Ürün Görseli</td>
                        <td class="description">Ürün Adı</td>
                        <td class="price">Fiyat</td>
                        <td class="quantity">Adet</td>
                        <td></td>
                    </tr>
                </thead>
                @foreach (CartItemResponse item in Model)
                {
                    <tbody>
                        <tr>
                            <td class="cart_product">
                                <img src="@item.Image" alt="" height="200" width="250">
                            </td>
                            <td>@item.ProductName</td>
                            <td>@item.Amount</td>
                            <td>@item.Quantity</td>
                            <td><partial name="PartialViews/_StatusPartiall" model="item.Status" /></td>
                            <td>
                                <a asp-controller="CartItem" asp-action="Delete" asp-route-id="@item.Id" class="btn">Sil</a>
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</section>

@if (Model.Count > 0)
{
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-5">
                <div class="total_area">
                    <ul>
                        <li>Sepet Tutarı: <span>@Model[Model.Count - 1].Total</span></li>
                        <a asp-controller="Order" asp-action="InsertOrder" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i> SATIN AL </a>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}