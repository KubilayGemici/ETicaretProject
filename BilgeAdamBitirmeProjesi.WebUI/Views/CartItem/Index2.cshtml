@using BilgeAdamBitirmeProjesi.WebUI.Models.ProductViewModels

@model List<ProductVM>
@{
    ViewData["Title"] = "Index2";
}
<section id="cart_items">
    <div class="container">
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Ürün Görseli</td>
                        <td class="description">Ürün Adı</td>
                        <td class="price">Fiyat</td>
                        <td class="quantity">Adet</td>
                        <td></td>
                    </tr>
                </thead>
                @if (Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        @if (string.IsNullOrEmpty(User.Identity.Name))
                        {
                            <tbody>
                                <tr>
                                    <td class="cart_product">
                                        <img src="@item.Image" alt="" height="200" width="250">
                                    </td>
                                    <td>@item.ProductName</td>
                                    <td>@item.UnitPrice</td>
                                    <td>@item.Quantity</td>
                                    <td>
                                        <a asp-controller="CartItem" asp-action="Delete1" asp-route-id="@item.Id" class="btn">Sil</a>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    }
                }
                    </table>
        </div>
    </div>
</section>


<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-8">
            <div class="total_area">
                @*<ul>
                        <li>Sepet Tutarı: <span>@Model[Model.Count - 1].Total</span></li>
                    </ul>*@
                <a asp-controller="Account" asp-action="Login" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Sipariş Vermek İçin Giriş Yapınız!!</a>
            </div>
        </div>
    </div>
</div>
