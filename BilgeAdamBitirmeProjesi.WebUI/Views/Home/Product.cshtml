@model Tuple<ProductViewModel, UserViewModel>
@{
    ViewData["Title"] = "Product";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-12 padding-right">
                <div class="features_items">
                    <h2 class="title text-center">Ürün Detay</h2>
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <img src="@Model.Item1.Image" alt="" />
                            </div>
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <h2>@Model.Item1.Price</h2>
                                    <h>Ürün Açıklaması:@Html.Raw(Model.Item1.Description)</h>
                                    <div class="post-author-info">
                                        <div class="author-img">
                                            <img src="@Model.Item2.ImageUrl" alt="" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
