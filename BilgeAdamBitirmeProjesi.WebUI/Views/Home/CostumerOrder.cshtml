@using  BilgeAdamBitirmeProjesi.Common.DTOs.Order;
@model List<OrderResponse>

@{
    ViewData["Title"] = "CostumerOrder";
}

<div class="content-body">
    <div class="row justify-content-between align-items-center mb-10">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="page-heading">
                <h3 class="title"><span>Bilgilerim</span></h3>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="box">
                <div class="box-body">
                    <table class="table table-bordered data-table data-table-default">
                        <thead>
                            <tr>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>Adresim</th>
                                <th>Sipariş Detay</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (OrderResponse item in Model)
                            {
                                <tr>
                                    <td>@item.CustomerName</td>
                                    <td>@item.CustomerSurName</td>
                                    <td>@item.Address</td>
                                    <td>
                                        <a asp-controller="Home" asp-action="CostumerOrder2" asp-route-id="@item.Id" class="btn btn-dark">Sipariş Detay</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>